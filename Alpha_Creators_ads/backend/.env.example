# Environment variables for Alpha Creators Ads Backend

# Application Settings
APP_NAME=Alpha Creators Ads
DEBUG=False
VERSION=1.0.0
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=4320

# Database URLs
DATABASE_URL=postgresql://alphaads:password@localhost:5432/alphaads
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/alphaads
NEO4J_URL=bolt://localhost:7687
INFLUX_URL=http://localhost:8086

# Database Credentials
POSTGRES_USER=alphaads
POSTGRES_PASSWORD=password
POSTGRES_DB=alphaads

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Neo4j
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# InfluxDB
INFLUX_TOKEN=my-super-secret-auth-token
INFLUX_ORG=alphaads
INFLUX_BUCKET=metrics

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=alphaads-consumers

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Social Media APIs (Get these from respective platforms)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# AI/ML APIs (Get these from respective providers)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Advertising Platform APIs
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token_here
FACEBOOK_ADS_ACCESS_TOKEN=your_facebook_ads_access_token_here
LINKEDIN_ADS_ACCESS_TOKEN=your_linkedin_ads_access_token_here

# NLP Models
SENTIMENT_MODEL_PATH=models/sentiment
EMOTION_MODEL_PATH=models/emotion
BERT_MODEL_NAME=bert-base-uncased

# Processing Limits
MAX_POSTS_PER_HOUR=100000
MAX_CONCURRENT_PROCESSING=100
SENTIMENT_PROCESSING_TIMEOUT=30
AD_GENERATION_TIMEOUT=300

# Performance Targets
TARGET_UPTIME=99.9
MAX_RESPONSE_TIME=5.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Paths
MODELS_DIR=models
LOGS_DIR=logs
DATA_DIR=data

# CORS
ALLOWED_HOSTS=["*"]
