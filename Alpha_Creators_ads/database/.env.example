# Alpha Creators Ads Database Environment Configuration
# Copy this file to .env and update with your secure passwords

# PostgreSQL Configuration
POSTGRES_DB=alphaads
POSTGRES_USER=alphaads_user
POSTGRES_PASSWORD=your_secure_password_here

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_INITDB_DATABASE=alphaads

# Neo4j Configuration
NEO4J_AUTH=neo4j/your_secure_password_here

# InfluxDB Configuration
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=your_secure_password_here
DOCKER_INFLUXDB_INIT_ORG=alphaads
DOCKER_INFLUXDB_INIT_BUCKET=metrics
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=your-super-secret-auth-token-here

# Redis Configuration
REDIS_PASSWORD=your_secure_password_here

# Admin Tool Passwords
PGADMIN_DEFAULT_EMAIL=admin@alphaads.com
PGADMIN_DEFAULT_PASSWORD=your_secure_password_here

MONGO_EXPRESS_BASICAUTH_USERNAME=admin
MONGO_EXPRESS_BASICAUTH_PASSWORD=your_secure_password_here

# Network Configuration
ALPHAADS_NETWORK=alphaads_network

# Volume Configuration
POSTGRES_DATA_PATH=./data/postgres
MONGODB_DATA_PATH=./data/mongodb
REDIS_DATA_PATH=./data/redis
NEO4J_DATA_PATH=./data/neo4j
INFLUXDB_DATA_PATH=./data/influxdb

# Security Settings (Production)
# Set to 'true' in production
ENABLE_SSL=false
SSL_CERT_PATH=./certs/
SSL_KEY_PATH=./certs/

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups/

# Monitoring
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=30
