# Alpha Creators Ads Frontend Environment Configuration
# Copy this file to .env and update with your configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here
VITE_TOKEN_STORAGE_KEY=alphaads_token
VITE_REFRESH_TOKEN_KEY=alphaads_refresh_token

# Application Configuration
VITE_APP_NAME=Alpha Creators Ads
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Emotion-Aware Advertising Platform

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_BETA_FEATURES=false

# External Services
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_HOTJAR_ID=your-hotjar-id-here

# Social Media Integration
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# Map and Location Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# CDN and Assets
VITE_CDN_URL=https://cdn.alphaads.com
VITE_ASSETS_BASE_URL=/assets

# Development
VITE_DEV_MODE=true
VITE_API_MOCK=false
VITE_DEBUG_MODE=true
VITE_SHOW_DEV_TOOLS=true

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_VERSION=1.0.0

# Theming
VITE_DEFAULT_THEME=light
VITE_BRAND_PRIMARY_COLOR=#3b82f6
VITE_BRAND_SECONDARY_COLOR=#6366f1

# Notifications
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key
VITE_NOTIFICATION_SERVICE_URL=http://localhost:8000/api/v1/notifications

# File Upload
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
VITE_UPLOAD_URL=http://localhost:8000/api/v1/upload

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_DOMAINS=localhost,alphaads.com,*.alphaads.com

# Rate Limiting
VITE_API_RATE_LIMIT=1000  # requests per minute
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000  # milliseconds

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Polling Configuration
VITE_POLLING_INTERVAL=30000  # 30 seconds
VITE_LONG_POLLING_TIMEOUT=60000  # 1 minute

# Cache Configuration
VITE_CACHE_TTL=300000  # 5 minutes
VITE_OFFLINE_CACHE=true
VITE_CACHE_SIZE_LIMIT=50485760  # 50MB
